<div class="container content-wrapper buffer-both">
  <h1 class="title-medium"><% t('views.users.labels.greatings') %></h1>

  <div class="column-1-2">
    <div class="form">
      <%= form_for @user do |f| %>
        <% if @user.errors.any? %>
          <div class="form-errors">
            <ul>
              <% for message in @user.errors.full_messages %>
                <li class="form-error-message"><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <div class="form-field">
          <%= f.label :email, t('views.users.labels.login'), class: 'form-label' %>
          <%= f.text_field :email, class: 'form-text-field' %>
        </div>

        <div class="form-field">
          <%= f.label :username, t('views.users.labels.username'), class: 'form-label' %>
          <%= f.text_field :username, class: 'form-text-field' %>
        </div>

        <div class="form-field">
          <%= f.label :name, t('views.users.labels.name'), class: 'form-label' %>
          <%= f.text_field :name, class: 'form-text-field' %>
        </div>

        <div class="form-field">
          <%= f.label :bgcolor, t('views.users.labels.bg_color'), class: 'form-label' %>
          <%= f.text_field :bgcolor, class: 'form-text-field' %>
        </div>

        <div class="form-field">
          <%= f.label :password, t('views.users.labels.password'), class: 'form-label' %>
          <%= f.password_field :password, class: 'form-text-field' %>
        </div>

        <div class="form-field">
          <%= f.label :password_confirmation, t('views.users.labels.password_confirmation'), class: 'form-label' %>
          <%= f.password_field :password_confirmation, class: 'form-text-field' %>
        </div>

        <div class="form-action">
          <%= f.submit t('views.users.buttons.sign_up'), class: 'button button-small button-dark' %>
        </div>
      <% end %>
    </div>
  </div>
</div>