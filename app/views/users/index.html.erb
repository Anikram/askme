<div class="content-wrapper buffer-both text-center">
  <div class="buffer-both">
    <h1 class="title-medium">Наши пользователи</h1>
  </div>

  <% @users.each do |user| %>
    <div class="users-list-item">
      <div class="user-image-div user-image-div-small">
        <% begin %>
          <%=  link_to image_tag(user_avatar(user), { class: 'user-image', alt: 'photo'}), user_path(user)	  %>
        <% rescue %>
          <%= link_to image_tag(asset_path('avatar.png'),class: 'user-image'), user_path(user) %>
        <% end %>
      </div>
    </div>
  <%	 end %>
</div>