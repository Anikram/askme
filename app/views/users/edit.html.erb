<div class="container content-wrapper buffer-both">
  <h1 class="title-medium"><% t('views.users.labels.edit_profile') %></h1>

  <div class="column-1-2">
      <%= form_for(@user) do |f| %>
        <% if @user.errors.any? %>
          <div class="form-errors">
            <ul>
              <% for message in @user.errors.full_messages %>
                <li class="form-error-message"><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <div class="form-field">
          <%= f.label :username, class: 'form-label' %>
          <%= f.text_field :username, class: 'form-text-field' %>
        </div>
         <div class="form-field">
          <%= f.label t('views.users.labels.name'), class: 'form-label' %>
          <%= f.text_field :name, class: 'form-text-field' %>
        </div>
         <div class="form-field">
          <%= f.label :avatar_url, class: 'form-label' %>
          <%= f.text_field :avatar_url, class: 'form-text-field' %>
        </div>
        <div class="form-field">
          <%= f.label :bgcolor, t('views.users.labels.bg_color'), class: 'form-label' %>
          <%= f.text_field :bgcolor, class: 'form-text-field' %>
        </div>

        <div class="buffer-top-large buffer-bottom">
          <% t('views.users.messages.leave_blank') %>
        </div>

         <div class="form-field">
          <%= f.label :password, class: 'form-label' %>
          <%= f.password_field :password, class: 'form-text-field' %>
        </div>

        <div class="form-field">
            <%= f.label :password_confirmation, class: 'form-label' %>
            <%= f.password_field :password_confirmation, class: 'form-text-field' %>
        </div>

        <div class="form-action buffer-top">
          <%= f.submit t('views.users.buttons.save'), class: 'button button-dark button-small' %>
        </div>

        <div class="form-action;">
          <%= link_to t('views.users.buttons.delete'), @user, class: "button button-green button-small", method: :delete, data: {confirm: t('views.users.messages.confirm_deletion')} %>
        </div>
      <% end %>
    </div>
</div>